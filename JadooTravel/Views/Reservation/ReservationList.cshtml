@using JadooTravel.Dtos.ReservationDtos
@model List<ResultRezervationDto>
@{
    ViewData["Title"] = "ReservationList";
    Layout = "~/Views/AdminUI/Index.cshtml";
}

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <td>#</td>
            <td>Başlık</td>
            <td>Açıklama</td>
            <td>Icon</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.IconUrl</td>
                <td><a href="/Reservation/DeleteReservation/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Reservation/UpdateReservation/@item.Id" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Reservation/CreateReservation" class="btn btn-success">Kayıt Ekle</a>
</div>

