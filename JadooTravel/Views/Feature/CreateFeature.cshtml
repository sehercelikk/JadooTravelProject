@using JadooTravel.Dtos.FeatureDtos
@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminUI/Index.cshtml";
    var message = ViewBag.message;
}

<div class="container">
    <br />
    @if(message != null)
    {
        <div class="alert alert-info">
            @message
        </div>
    }
    <form method="post">
        <div class="form-group">
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label>Alt Başlık</label>
            <input type="text" asp-for="MainTitle" class="form-control" />
        </div>
        <div class="form-group">
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label>Video Url</label>
            <input type="text" asp-for="VideoUrl" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Ekle</button>
    </form>
</div>

