@using JadooTravel.Dtos.TestimonialDtos
@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminUI/Index.cshtml";
}

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <td>#</td>
            <td>ImageUrl</td>
            <td>Açıklama</td>
            <td>Ad Soyad</td>
            <td>Şehir, Ülke</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ImageUrl</td>
                <td>@item.Description</td>
                <td>@item.FullName</td>
                <td>@item.CityCountry</td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Testimonial/CreateTestimonial" class="btn btn-success">Kayıt Ekle</a>
</div>

