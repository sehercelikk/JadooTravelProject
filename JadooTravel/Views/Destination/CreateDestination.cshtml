@using JadooTravel.Dtos.DestinationDtos
@model CreateDestinationDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <form method="post">
        <div class="form-group">
            <label>Şehir ve Ülke Giriniz</label>
            <input type="text" asp-for="CityCountry" class="form-control" />
        </div>
        <div class="form-group">
            <label>Fotoğraf Giriniz</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label>Tur Fiyatı Giriniz</label>
            <input type="text" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label>Gün-Gece Sayısı Giriniz</label>
            <input type="text" asp-for="DayNight" class="form-control" />
        </div>
        <div class="form-group">
            <label>Kapasite Giriniz</label>
            <input type="text" asp-for="Capacity" class="form-control" />
        </div>
        <div class="form-group">
            <label>Açıklama Giriniz</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Ekle</button>
    </form>
</div>
