@using JadooTravel.Dtos.CategoryDtos
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminUI/Index.cshtml";
}


<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <td>#</td>
            <td>Kategoryi Adı</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td><a href="/Category/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@item.Id" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Category/CreateCatgory" class="btn btn-success">Kayıt Ekle</a>
</div>