@using JadooTravel.Dtos.CategoryDtos
@model UpdateCategoryDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminUI/Index.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Kategori Adı</label>
            <input type="text" asp-for="CategoryName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label>Icon Url</label>
            <input type="text" asp-for="IconUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label>Durum</label>
            <input type="text" asp-for="Status" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Güncelle</button>
    </form>
</div>
